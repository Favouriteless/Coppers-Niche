{
  "schemaVersion": 1,
  "id": "coppers_niche",
  "version": "${version}",

  "name": "Copper's Niche",
  "description": "Coppers Niche is a mod designed for working without enchantments, but still being able to use some of the more vital features they unlock. New Copper Tools can be forged with the sole purpose of Silk Touching or Fortuning blocks.",
  "authors": [
    "Favouriteless",
    "RRandomStuff"
  ],
  "contact": {
    "homepage": "",
    "sources": "https://github.com/favouriteless/coppers-niche"
  },

  "license": "MIT",
  "icon": "assets/coppers_niche/icon.png",

  "environment": "*",
  "entrypoints": {
    "main": [
      "net.favouriteless.coppersniche.CoppersNiche"
    ],
    "client": [
      "net.favouriteless.coppersniche.CoppersNicheClient"
    ]
  },
  "mixins": [
    "coppers_niche.mixins.json"
  ],

  "depends": {
    "fabricloader": ">=0.14.9",
    "fabric-api": "*",
    "minecraft": "~1.19",
    "java": ">=17"
  },
  "suggests": {
    "another-mod": "*"
  }
}
